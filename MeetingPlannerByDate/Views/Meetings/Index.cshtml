@model IEnumerable<MeetingPlanner.Models.Meeting> 
@{
    ViewData["Title"] = "Index";
}

<h1>Meeting Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MeetingID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conducting)
            </th>
                        <th>
                @Html.DisplayNameFor(model => model.OpenPrayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speakers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosePrayer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) { 
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetingID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Conducting)
                </td>
                                <td>
                    @Html.DisplayFor(modelItem => item.OpenPrayer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Speakers.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClosePrayer)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MeetingID.ToString("o")">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MeetingID.ToString("o")">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MeetingID.ToString("o")">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
